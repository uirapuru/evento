{% extends "base.html.twig" %}

{% block body %}
    <div class="jumbotron">
        <h1>Warsztaty Capoeira?</h1>
        <p class="lead">Podaj wszelkie informacje, wypełnij kalendarz, oznacz się na mapie i podeślij wygenerowaną stronę wszystkim zainteresowanym!</p>
        <p><a class="btn btn-lg btn-success" href="{{ path("evento_register") }}" role="button">Zarejestruj się</a></p>
    </div>

    <div class="row marketing">
        {% for workshop in workshops %}
        {% if loop.index % 5 == 1 %}<div class="col-lg-6">{% endif %}
            <h4>
                <a href="{{ path("evento_show", {slug: workshop.slug}) }}">
                    {{ workshop.city }}, {{ workshop.startDate|date("d.m.Y") }}
                </a>
            </h4>
            <p>{{ workshop.title }}</p>
        {% if loop.index % 5 == 0 or loop.last %}</div>{% endif %}
        {% endfor %}
    </div>
{% endblock body %}